extends ./../../layouts/header.pug


block title
    title= title 


block cssLink
    link(rel="stylesheet", href="/css/signIn.css")


block jsScript
    script(src="/js/signIn.js" defer) 


block bodyContent
    .signIn-section
        .wrapper
            .signIn-wrapper
                div.social-icon
                    i.fab.fa-twitter

                h2 Reset your password

                form(action='/resetPassword', method="post")
                    label(for="username") User Name or Email

                    .user-input 
                        i.user-icon.fas.fa-user
                        input#username(type="text", name="username"  class="form-control" , value=user.username)
                    
                    if error.username 
                        p.error.username-error #{error.username.msg} 



                    input(type="submit", value="Reset Now" class="form-control signIn-btn")

                    div.footer_link
                        p.disclaim.mt-3 Need to login? 
                            a(href='/signIn') Login here